<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
           >


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dress" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="3"
                android:text="Dress Desiney For Women"
                android:textColor="#0C0C0C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="US$700.30"
                android:textColor="#0C0C0C"
                android:textColorHighlight="#0B0A0A"
                android:textColorHint="#151414"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/copoun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Free Delivery :until 21dec"
                android:textColor="#0A77CD"
                android:textColorHighlight="#050505"
                android:textColorHint="#121111"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/price" />

            <ImageButton
                android:id="@+id/fav_bt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FAF4F4"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:srcCompat="@drawable/heart" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FAF4F4"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:srcCompat="@drawable/ic_delete_forever_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Move to wishlist"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintTop_toTopOf="@+id/cancel" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Remove"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/copoun"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/incre_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#F8F6F6"
                android:backgroundTint="#FAF4F4"

                app:layout_constraintBottom_toBottomOf="@+id/tvcount"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/tvcount"
                app:srcCompat="@drawable/ic_add" />

            <TextView
                android:id="@+id/tvcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="15dp"
                android:text="1"
                android:textColor="#0C0C0C"
                android:layout_marginTop="5sp"
                app:layout_constraintStart_toEndOf="@+id/incre_count"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageButton
                android:id="@+id/min_count"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:background="#FBFBFB"
                android:backgroundTint="#FDFAFA"
                app:layout_constraintBottom_toBottomOf="@+id/tvcount"
                app:layout_constraintStart_toEndOf="@+id/tvcount"
                app:layout_constraintTop_toTopOf="@+id/tvcount"
                app:srcCompat="@drawable/ic_min" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:alpha=".2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvcount"
                tools:layout_editor_absoluteX="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</layout>